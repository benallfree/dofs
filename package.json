{
  "name": "dofs-root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "format": "prettier --write ."
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": [
          "*.jsonc"
        ],
        "options": {
          "parser": "jsonc-parser",
          "trailingComma": "none"
        }
      }
    ]
  },
  "workspaces": [
    "packages/*",
    "packages/dofs/example"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.20.5"
  }
}
